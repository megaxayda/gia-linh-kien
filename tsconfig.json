{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "lib": ["ESNext", "DOM"],

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
